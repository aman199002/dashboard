= form_for(@task) do |f|
  - if @task.errors.any?
    #error_explanation
      %h2
        = pluralize(@task.errors.count, "error")
        prohibited this task from being saved:
      %ul
        - @task.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :project_id
    %br/
    = f.text_field :project_id
  .field
    = f.label :task_type_id
    %br/
    = f.text_field :task_type_id
  .field
    = f.label :description
    %br/
    = f.text_area :description
  .actions
    = f.submit
